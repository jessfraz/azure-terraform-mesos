{
  "variables": {
    "prefix": "",

    "client_id": "",
    "client_secret": "",
    "tenant_id": "",
    "subscription_id": "",


    "rg": "mesos-cluster-packer",
    "location": "West US",
    "storageaccount": "packerimages"
  },
  "builders": [{
    "type": "azure-arm",
    "client_id": "{{user `client_id`}}",

    "client_secret": "{{user `client_secret`}}",
    "resource_group_name": "{{user `prefix`}}-{{user `rg`}}",
    "storage_account": "{{user `prefix`}}{{user `storageaccount`}}",
    "subscription_id": "{{user `subscription_id`}}",
    "tenant_id": "{{user `tenant_id`}}",

    "capture_container_name": "images",
    "capture_name_prefix": "packer",

    "os_type": "Linux",
    "image_publisher": "CoreOS",
    "image_offer": "CoreOS",
    "image_sku": "stable:latest",

    "azure_tags": {
      "app": "mesos-cluster"
    },

    "location": "{{user `location`}}",
    "vm_size": "Standard_D2_v2"
  }],
  "provisioners": [{
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
    "inline": [
      "echo hello world"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
  }]
}
